pipeline {
  agent any

  environment {
    COMPOSE_PROJECT_NAME = "subway_repo"
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Deploy with docker compose') {
      steps {
        withCredentials([
          file(credentialsId: 'ENV_FILE', variable: 'ENV_FILE')
        ]) {
          sh '''
            ./deploy/deploy.sh
          '''
        }
      }
    }
  }

  post {
    always {
      sh '''
        docker compose -p ${COMPOSE_PROJECT_NAME} logs --tail=80 || true
      '''
    }
  }
}